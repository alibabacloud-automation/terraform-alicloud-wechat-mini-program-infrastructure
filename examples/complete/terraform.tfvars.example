# Example terraform.tfvars file
# Copy this file to terraform.tfvars and modify the values as needed

# Region configuration
region_id = "cn-hangzhou"

# Resource naming
name_prefix = "my-wordpress"

# Network configuration
vpc_cidr_block     = "192.168.0.0/16"
vswitch_cidr_block = "192.168.0.0/24"

# Database configuration
db_name = "wordpress"
db_user = "dbuser"
# IMPORTANT: Change this to a secure password
db_password = "YourSecurePassword123!"

# ECS configuration
# IMPORTANT: Change this to a secure password
ecs_instance_password = "YourECSPassword123!"

# WordPress configuration
wordpress_user_name = "admin"
# IMPORTANT: Change this to a secure password
wordpress_password = "YourWordPressPassword123!"
wordpress_user_email = "your-email@example.com"